{
  "name": "@webhook-mediator/api",
  "version": "1.0.0-alpha.0.1",
  "description": "webhook-mediator api service",
  "main": "src/index.js",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "start:prod": "TS_NODE_BASEURL=./build/dist/src node -r tsconfig-paths/register build/dist/src/index.js",
    "test": "jest  --coverage --silent --noStackTrace && yarn test:compilation",
    "test:watch": "jest --watch",
    "open:cov": "yarn test && opener coverage/index.html",
    "precommit": "tslint --project ./tsconfig.json && lint-staged",
    "test:compilation": "tsc --noEmit",
    "build": "tsc",
    "build:clean": "rm -rf build"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.1",
    "@hapi/hapi": "^20.0.1",
    "@types/hapi-pino": "^8.0.5",
    "@types/pino": "^6.3.12",
    "app-module-path": "^2.2.0",
    "hapi-pino": "^8.5.0",
    "hapi-sentry": "^3.1.0",
    "jest-fetch-mock": "^2.1.2",
    "joi": "^17.3.0",
    "node-fetch": "^2.6.7",
    "pino": "^6.0.0",
    "tsconfig-paths": "^3.13.0"
  },
  "devDependencies": {
    "@types/fhir": "^0.0.41",
    "@types/hapi__boom": "^9.0.1",
    "@types/hapi__hapi": "^20.0.0",
    "@types/jest": "^26.0.14",
    "@types/node-fetch": "^2.5.12",
    "@types/uuid": "^3.4.3",
    "cross-env": "^5.2.0",
    "jest": "26.6.0",
    "nodemon": "^1.17.5",
    "prettier": "^2.5.1",
    "ts-jest": "^26.4.4",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.12.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "ts-node": "^6.1.1",
    "typescript": "^4.8.3"
  },
  "lint-staged": {
    "src/**/*.{ts,graphql}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "@api/(.*)": "<rootDir>/src/$1"
    },
    "setupFiles": [
      "./test/setupJest.ts"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  }
}
